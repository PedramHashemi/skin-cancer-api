{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(module)s - %(lineno)d - %(message)s"
        },
        "simple": {
            "format": "%(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple"
        },
        "file_info": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "standard",
            "filename": "./logging/info.log"
        },
        "file_warning": {
            "class": "logging.FileHandler",
            "level": "WARNING",
            "formatter": "standard",
            "filename": "./logging/warnings.log"
        },
        "file_error": {
            "class": "logging.FileHandler",
            "level": "ERROR",
            "formatter": "detailed",
            "filename": "./logging/errors.log"
        }
    },
    "loggers": {
        "": {
            "handlers": ["console", "file_info", "file_warning", "file_error"],
            "level": "INFO",
            "propagate": false
        }
    }
}